	ifnotset 3 
	type clock
	source clock.png
	clocksize 4 4 8 6 8 7 8 8 8 7 8 8 0 0 2
	x window.width-clock.width-6
	y 5
end

#icon
object  ifset 1
	type icon
	x 4
	y 4+(title.height-icon.height)/2
end
# avatar
object
	ifset 2	
	type avatar
	x 4
	y  4+title.height+6
	w 32
	proportional 1
end

