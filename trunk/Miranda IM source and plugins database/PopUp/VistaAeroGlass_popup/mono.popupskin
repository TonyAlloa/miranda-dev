# icon
object 
	type icon
	x 4
	y 4+(title.height-icon.height)/2
end
#avatar
object
	ifset 2
	ifnotset 3
	type avatar
	x 9+2
	y 4+title.height+4+2
	w options.avatarsize+32*(1-options.avatarsize/(options.avatarsize>1))
	proportional 1
end
object
	ifset 2
	ifset 3
	type avatar
	x window.width-avatar.width-9-2
	y 4+title.height+4+2
	w options.avatarsize+32*(1-options.avatarsize/(options.avatarsize>1))
	proportional 1
end

# clock
object
	ifnotset 1
	type clock
	source clock.png
	clocksize 5 4 8 6 8 7 8 8 8 7 8 8 0 0 5
	x window.width-clock.width-9
	y 2
end
object
	ifset 1
	type clock
	source clock2.png
	mono
	clocksize 5 4 8 6 8 7 8 8 8 7 8 8 0 0 5
	x window.width-clock.width-9
	y 2
end

