# разделитель

object
   type bitmap
   source fskin_popup_images/divider.png
   layer
   x 6
   y 10+title.height+4
end



# часы

object
   ifset 5
   type clock
   source fskin_popup_images/clock.png
   clocksize 0 4 8 4 6 7 7 6 7 6 7 7 0 0 0
   x window.width-clock.width-8
   y 9
end



# иконка

object
   ifset 4
   type icon
   x 16
   y (4+10+title.height+4)/2-(icon.height/2)+3
end



# заголовок

object
   ifset 4
   type title
   color 0 0 0
   x 16+icon.width+2
   y 10
end

object
   ifnotset 4
   type title
   color 0 0 0
   x 15
   y 10
end



# текст окна

object
   ifset 1
   ifnotset 2
   type text
   color 0 0 0
   x 11+avatar.width+((avatar.width/avatar.width)*6)
   y 10+title.height+12
   w window.width-avatar.width-((avatar.width/avatar.width)*6)-19
end

object
   ifset 1
   ifset 2
   type text
   color 0 0 0
   x 11
   y 10+title.height+12
   w window.width-avatar.width-((avatar.width/avatar.width)*7)-19
end

object
   ifnotset 1
   type text
   color 0 0 0
   x 11
   y 10+title.height+12
   w window.width-19
end



# аватар

object
   ifset 1
   ifnotset 2
   ifnotset 3
   type avatar
   proportional 1
   x 14
   y 10+title.height+15
   w 32
end

object
   ifset 1
   ifnotset 2
   ifset 3
   type avatar
   proportional 1
   x 14
   y 10+title.height+15
   w options.avatarsize
end

object
   ifset 1
   ifset 2
   ifnotset 3
   type avatar
   proportional 1
   x window.width-avatar.width-12
   y 10+title.height+15
   w 32
end

object
   ifset 1
   ifset 2
   ifset 3
   type avatar
   proportional 1
   x window.width-avatar.width-12
   y 10+title.height+15
   w options.avatarsize
end